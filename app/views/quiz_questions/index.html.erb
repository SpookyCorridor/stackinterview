<%= javascript_tag do %> 
	window.globalkey = "<%= ENV['API_KEY'] %>";
<% end %>  

<%= javascript_include_tag 'quiz_questions' %> 
<script type="text/template" id='quiz-template'>
  <div id="title" class="row">
		<%%= title %>  
	</div>   
</script>

<script type="text/template" id="quiz-choice-template">
			<li class="choices"> <%%=answer%> </li>
</script>

<header class="row">
	<!-- buttons to change question filter--> 
	<ul id="buttons" class="twelve columns">
		<li id="front-end"><a href="#"><%= image_tag 'frontend-icon.svg' %></a></li>
		<li id="back-end"><%= image_tag 'backend-icon.svg' %></li>
		<li id="full-stack"><%= image_tag 'fullstack-icon.svg' %></li>
	</ul>
</header>

<section id='quiz-list'>
	<div class="row choices-list">
		<ul id="choicess">			
		</ul>	
	</div>
</section>

<footer class="row">
	<div class="u-pull-left">
	<% if current_user %>
  		<%= current_user.name %> | <%= link_to "logout", logout_path %>
	<% else %>
  	<%= link_to 'login', login_path %> | <%= link_to 'signup', signup_path %>
	<% end %>
	</div>
	<button id="skip" class="btn error-btn u-pull-right">skip</button>
</footer>